<div class="row" >
	<div class="col-md-4">
		<h3>CouchInn!!!</h3> 
	</div>
	<div class="col-md-2"><br>
		<% if current_user %> 
			<%= button_to 'Logout', destroy_user_session_path, method: :delete %> 
		<% else %>
    		<%= link_to 'Login', new_user_session_path %>
		<% end %>
	</div>

	<div class="col-md-2"><br>
		<%= link_to 'Lista de Couchs', couchs_path %>
	</div>

	<div class="col-md-2"><br>
		<% if current_user %> 
		<% if can? :manage, :all %>
			<%= link_to 'Lista de Usuarios', users_path %> 		
		<% end %>
		<% end %>
	</div>

	<div class="col-md-2"><br>
		<% if current_user %> 
		<% if can? :manage, :all %>
			<%= link_to 'Agregar tipo de couch', "couch_type" %>  
		<% end %>
		<% end %>
	</div>
</div><br><br>


<table class="table">
	<tr>
    	<td colspan="2"><h3> Listado de Couchs </h3></td>
    	<td colspan="2"> 
    	<% if current_user %> 
		<% if can? :manage, :all %>
			<%= link_to "Agregar", new_couch_path() , class: 'btn btn-success btn-sm'
			%>
		<% end %>
		<% end %>
    	</td>
	<tr>
		<th> Título </th>
		<th> Descripción </th>
		<th> User id </th>
		<th> Opciones </th>
	</tr>

	<% couchs = Couch.all %>
	<% couchs.each do |couch| %>
		<tr>
			<td> <%= link_to couch.titulo, couch %> </td>
			<td> <%= couch.descripcion %> </td>
			<td> <%= couch.user_id %> </td>
			<td>
				<%= link_to "Editar", edit_couch_path(couch), class: 'btn btn-info btn-sm' %>
				<%= link_to "Eliminar", couch, method: :delete, class: 'btn btn-danger btn-sm' %>
			</td>
		</tr>
	<% end %>


</table>