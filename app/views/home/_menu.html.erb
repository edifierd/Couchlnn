<%= link_to "/" do %>
	<%= image_tag "titulo.jpg" , style:"width: 100%" %>
<% end %>

<div class="row" >
	<div>
		<div class="col-md-2"></div>
	</div> 

	<div class="col-md-2"><br>
		<% if current_user %> 
			<%= button_to 'Cerrar Sesión', destroy_user_session_path, method: :delete ,  class: 'btn btn-info btn-sm' %> 
		<% else %>
    		<%= link_to 'Iniciar Sesión', new_user_session_path,  class: 'btn btn-info btn-sm'  %>
		<% end %>
	</div>

	<div class="col-md-2"><br>
		<% if current_user and can? :read, User %>
		<%= link_to current_user.first_name , current_user,  class: 'btn btn-info btn-sm' %>
 		<%= link_to "/notificaciones/index" ,  class: 'btn btn-info btn-sm' do  %>
 			<%= image_tag "notification.png" , height: '20', width: 'auto'%>
 			<b><%= cantidadNotificaciones %></b>
 		<% end %>
		<% end %>
	</div>

	<div class="col-md-2"><br>
		<%= link_to 'Buscar Couchs', "/",  class: 'btn btn-info btn-sm' %>
	</div>

	<div class="col-md-2"><br>
		<% if current_user and can? :crud, User %>
			<%= link_to 'Lista de Usuarios', users_path ,  class: 'btn btn-info btn-sm' %> 		
		<% end %>
	</div>

	<div class="col-md-2"><br>
		<% if current_user and can? :crud, CouchType %>
			<%= link_to 'Tipos de couch', "/couch_type",  class: 'btn btn-info btn-sm'  %>  
		<% end %>
	</div>

</div>

<br><br>