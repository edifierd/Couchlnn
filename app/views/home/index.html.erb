<%= render "home/menu" %>
		
<table class="table">
	<tr>
		<td colspan="6" ><h3>Buscar un couch</h3></td>
	</tr>
	<tr>
		<th>Lugar</th>
		<th>Tipo</th>
		<th>Capacidad</th>
    <th>Fecha de inicio de disponibilidad</th>
    <th>Fecha de Fin de disponibilidad</th>
    <th>Buscar</th>
	</tr>
	
      
      <%= form_for Couch.new , url: {:action=>"index", :controller=>"couchs"} do |f| %>

	<tr>
		<td>
          <select name=ubicacion >
            <option value="Cualquiera">Cualquier Lugar</option>
            <option value="Buenos Aires">Buenos Aires</option>
            <option value="Buenos Aires Capital">Buenos Aires Capital</option>
            <option value="Catamarca">Catamarca</option>
            <option value="Chaco">Chaco</option>
            <option value="Chubut">Chubut</option>      
            <option value="Uruguay">Uruguay</option>      
            <option value="Cordoba">Cordoba</option>
            <option value="Corrientes">Corrientes</option>
            <option value="Entre Rios">Entre Rios</option>
            <option value="Formosa">Formosa</option>
            <option value="Jujuy">Jujuy</option>
            <option value="La Pampa">La Pampa</option>
            <option value="La Rioja">La Rioja</option>
            <option value="Mendoza">Mendoza</option>
            <option value="Misiones">Misiones</option>
            <option value="Neuquen">Neuquen</option>
            <option value="Rio Negro">Rio Negro</option>
            <option value="Salta">Salta</option>
            <option value="San Juan">San Juan</option>
            <option value="San Luis">San Luis</option>
            <option value="Santa Cruz">Santa Cruz</option>
            <option value="Santa Fe">Santa Fe</option>
            <option value="Santiago del Estero">Santiago del Estero</option>
            <option value="Tierra del Fuego">Tierra del Fuego</option>
            <option value="Tucuman">Tucuman</option>
          </select>
      </td>
      <td>
		<%= collection_select :couch, :couch_type_id,[CouchType.new(titulo: "Cualquiera" , id: -1)] + CouchType.all, :id, :titulo %>
	  </td>
	  <td>
		<input id="capacity" max="20.0" min="1.0" name="capacity" step="1" type="number" value=1 required/>
	  </td>
    <td class="col-md-6">
        <%= f.date_select :avivable_in_date, :order => [:day, :month, :year], :required => true %>
    </td>
    <td class="col-md-6">
        <%= f.date_select :avivable_out_date, :order => [:day, :month, :year] , :required => true %>
    </td>
	  <td>
	  	<button type="submit" title="Buscar" style="background:none; border:none">
	  		<img src="/assets/search.png" alt="Buscar" />
		  </button>
	  </td>
    </tr>

	<% end %>
	
</table>

<br> 

<table class="table">
      <tr>
      <td colspan="2"><h3> Listado de Couchs </h3></td>
      <td colspan="1"> 
      <% if current_user and can? :create, Couch %>
                  <%= link_to "Agregar", new_couch_path() , class: 'btn btn-success btn-sm',  action: "new"%>
            <% end %>
      </td>
      <td colspan="2"></td>
      <tr>
            <th> Foto </th>
            <th> Calificación </th>
            <th> Título </th>
            <th> Descripción </th>
            <th> Propietario </th>
      </tr>

      <% couchs = Couch.all %>
      <% couchs.each do |couch| %>
            <tr>
                  <td> 
                  <%= link_to couch do %>
                        <% if couch.user.has_role? :premium %>
                              <%= image_tag couch.url_foto, :alt => "Sin Foto",  height: 'auto', width: '170', class: "img-rounded" %>
                        <% else %>
                              <%= image_tag "http://www.libreriasigal.com/images/sin_foto.png", :alt => "Sin Foto",  height: 'auto', width: '170', class: "img-rounded" %>
                        <% end %>
                  <% end %>
                  </td>
                  <td> <% if couch.calificacionPromedio > 0 %><%= couch.calificacionPromedio %><% else %>Sin calificar<% end %></td>
                  <td> <%= link_to couch.titulo, couch %> </td>
                  <td> <%= couch.descripcion %> </td>
                  <td> <%= link_to User.find(couch.user_id).first_name, User.find(couch.user_id) %> </td>
            </tr>
      <% end %>


</table>




