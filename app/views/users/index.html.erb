<h1> Listado de Usuarios </h1>

<table class="table">

	<tr>
		<th> Email </th>
		
	</tr>

	<% @users.each do |user| %>
		<tr>
			<td> <%= link_to user.email, user %> </td>
			<td>
				<%= link_to "Editar", edit_user_path(user), class: 'btn btn-info btn-sm' %>
				<%= link_to "Eliminar", user, method: :delete, class: 'btn btn-danger btn-sm' %>
			</td>
		</tr>
	<% end %>

</table>