<div class="row" >
	<div class="col-md-4">
		<h3>CouchInn!!!</h3> 
	</div>
	<div class="col-md-2"><br>
		<% if current_user %> 
			<%= button_to 'Logout', destroy_user_session_path, method: :delete %> 
		<% else %>
    		<%= link_to 'Login', new_user_session_path %>
		<% end %>
	</div>

	<div class="col-md-2"><br>
		<%= link_to 'Lista de Couchs', couchs_path %>
	</div>

	<div class="col-md-2"><br>
		<% if current_user %> 
		<% if can? :manage, :all %>
			<%= link_to 'Lista de Usuarios', users_path %> 		
		<% end %>
		<% end %>
	</div>

	<div class="col-md-2"><br>
		<% if current_user %> 
		<% if can? :manage, :all %>
			<%= link_to 'Agregar tipo de couch', "/couch_type" %>  
		<% end %>
		<% end %>
	</div>
</div><br><br>

<table class="table">
	<tr>
		<td>Perfil de Usuario<td/>
		<td> 
			<%= link_to "Editar", edit_user_registration_path, class: 'btn btn-info btn-sm' %>	
		</td>
	</tr>
	<tr>
		<td colspan="2">
		Correo:  <%= @user.email %> 
		</td> 
	</tr>
	<tr>
		<td colspan="2"> <h5>Mi lista de Couchs </h5> </td>
	</tr>
	<% if @user.couchs.count > 0 %>
	<% @user.couchs.each do |couch| %>
		<tr>
			<td> Titulo: <%= couch.titulo %> </td>
			<td> Descripcion: <%= couch.descripcion %> </td>
		</tr>
	<% end %>
	<% else %>
		<tr>
			<td colspan="2">El usuario no tiene couchs</td>
		</tr>
	<% end %>
	

	

</table>